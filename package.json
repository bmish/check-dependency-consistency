{
  "name": "check-dependency-version-consistency",
  "version": "0.3.0",
  "description": "Ensures dependencies are on consistent versions across a monorepo.",
  "keywords": [
    "dependencies",
    "linter",
    "monorepo",
    "package.json",
    "packages",
    "workspace"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/bmish/check-dependency-version-consistency.git"
  },
  "license": "MIT",
  "bin": {
    "check-dependency-version-consistency": "dist/bin/check-dependency-version-consistency.js"
  },
  "scripts": {
    "build": "tsc",
    "lint": "npm-run-all --aggregate-output --continue-on-error --parallel lint:*",
    "lint:docs": "markdownlint '**/*.md'",
    "lint:js": "eslint --cache .",
    "lint:package-json": "sort-package-json --check",
    "lint:types": "tsc",
    "prepublishOnly": "tsc",
    "release": "release-it",
    "test": "nyc mocha -r ts-node/register 'test/**/*.ts'"
  },
  "nyc": {
    "branches": 100,
    "functions": 100,
    "lines": 100,
    "statements": 100
  },
  "dependencies": {
    "commander": "^7.0.0",
    "globby": "^11.0.0",
    "type-fest": "^1.0.2"
  },
  "devDependencies": {
    "@types/mocha": "^8.2.0",
    "@types/node": "^16.0.0",
    "@typescript-eslint/eslint-plugin": "^4.0.1",
    "@typescript-eslint/parser": "^4.0.1",
    "eslint": "^7.0.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-square": "^19.0.2",
    "markdownlint-cli": "^0.27.1",
    "mocha": "^8.1.3",
    "npm-run-all": "^4.1.5",
    "nyc": "^15.1.0",
    "release-it": "^14.2.2",
    "release-it-lerna-changelog": "^3.1.0",
    "sort-package-json": "^1.44.0",
    "ts-node": "^10.1.0",
    "typescript": "^4.0.2"
  },
  "engines": {
    "node": "10.x || 12.x || >= 14"
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org"
  },
  "release-it": {
    "plugins": {
      "release-it-lerna-changelog": {
        "infile": "CHANGELOG.md",
        "launchEditor": true
      }
    },
    "git": {
      "tagName": "v${version}"
    },
    "github": {
      "release": true,
      "tokenRef": "GITHUB_AUTH"
    }
  }
}
